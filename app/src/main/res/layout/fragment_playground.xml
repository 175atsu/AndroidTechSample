<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_playground_to_biometric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playground_biometric" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_playground_to_compose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playground_compose" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_playground_to_compose_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playground_compose_list" />
        </LinearLayout>
    </ScrollView>
</layout>
