<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
      android:id="@+id/basic_notice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/notice_basic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/action_notice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/notice_action"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/basic_notice" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/direct_notice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/notice_direct"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/action_notice" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/button_notice_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/notice_progress"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/direct_notice" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

