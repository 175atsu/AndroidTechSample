<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/text_label"
        style="@style/Text.PrimaryColor.Head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/material_label_chip" />

      <TextView
        style="@style/Text.PrimaryColor.Head3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_assist" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_assist"
        app:chipIcon="@drawable/ic_add_black_24dp" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Assist.Elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_assist_elevated"
        app:chipIcon="@drawable/ic_add_black_24dp" />

      <TextView
        style="@style/Text.PrimaryColor.Head3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_filter" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_filter" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Filter.Elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_filter_elevated" />

      <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.chip.Chip
          style="@style/Widget.Material3.Chip.Filter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/material_chip_filter1" />

        <com.google.android.material.chip.Chip
          style="@style/Widget.Material3.Chip.Filter.Elevated"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/material_chip_filter2" />

        <com.google.android.material.chip.Chip
          style="@style/Widget.Material3.Chip.Filter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/material_chip_filter3" />

        <com.google.android.material.chip.Chip
          style="@style/Widget.Material3.Chip.Filter.Elevated"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/material_chip_filter4" />
      </com.google.android.material.chip.ChipGroup>

      <TextView
        style="@style/Text.PrimaryColor.Head3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_input" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_input" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Input.Elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_input_elevated" />

      <TextView
        style="@style/Text.PrimaryColor.Head3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_suggestion" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_suggestion" />

      <com.google.android.material.chip.Chip
        style="@style/Widget.Material3.Chip.Suggestion.Elevated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/material_chip_suggestion_elevated" />

    </LinearLayout>
  </ScrollView>
</layout>
